---
import { Icon } from 'astro-icon'

import Logo from '../svg/astro/logomark-light.svg'
import PrimaryLogo from '../svg/astro/full-logo-light.svg'

const navigation = [
  { name: 'Home', href: '', current: false },
  { name: 'About', href: 'about', current: false },
  { name: 'Contact', href: 'contact', current: false },
  { name: 'Privacy', href: 'privacy', current: false },
  { name: 'Blog', href: 'blog', current: false },
]
---
<nav x-data="{ isOpen: false }">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button type="button" @click="isOpen = !isOpen" class="inline-flex items-center justify-center p-2 rounded-md  text-purple-600 hover:text-pink-600 hover:bg-purple-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-300" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <Icon
            :class="{'hidden': isOpen, 'block': !isOpen }"
            class="block h-6 w-6"
            aria-hidden="true"
            pack="heroicons-outline"
            name="menu"
          />
          <Icon
            :class="{'block': isOpen, 'hidden': !isOpen }"
            class="hidden h-6 w-6"
            aria-hidden="true"
            pack="heroicons-outline"
            name="x"
          />
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <img
          class="block lg:hidden h-8 w-auto"
          src={Logo}
          alt="Logo"
        />
        <img
          class="hidden lg:block h-8 w-auto"
          src={PrimaryLogo}
          alt="Logo"
        />
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            {navigation.map(item => (
              <a
                href={import.meta.env.BASE_URL + item.href}
                class={
                  (item.current
                    ? 'bg-purple-200 text-pink-600'
                    : 'text-purple-600 hover:bg-purple-200 hover:text-pink-600') +
                    ' px-3 py-2 rounded-md text-lg font-medium'
                }
                aria-current={item.current ? 'page' : undefined}
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <!-- Right nav -->
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-100 transform"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-75 transform"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    class="sm:hidden"
    id="mobile-menu"
  >
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navigation.map(item => (
        <a
        href={import.meta.env.BASE_URL + item.href}
          class={
            (item.current
              ? 'bg-purple-200 text-pink-600'
              : 'text-purple-600 hover:bg-purple-200 hover:text-pink-600') +
              ' px-2 pt-2 pb-3 space-y-1'
          }
          aria-current={item.current ? 'page' : undefined}
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</nav>
