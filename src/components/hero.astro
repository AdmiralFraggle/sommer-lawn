---
import HeroImg from '../components/heroimg.astro'
import { FeaturedSVG } from '../config'
---

<div class="relative bg-white dark:bg-gray-900 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div
      class="z-10 relative pb-8 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32 bg-white dark:bg-gray-900"
    >
      <svg
        class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white dark:text-gray-900 transform translate-x-1/2"
        fill="currentColor"
        viewBox="0 0 100 100"
        preserveAspectRatio="none"
        aria-hidden="true"
      >
        <polygon points="50,0 100,0 50,100 0,100"></polygon>
      </svg>
      <main
        class="pt-10 mx-auto max-w-7xl px-4 sm:pt-12 sm:px-6 md:pt-16 lg:pt-20 lg:px-8 xl:pt-28"
      >
        <div class="text-center sm:text-left">
          <h1
            class="text-4xl tracking-tight font-extrabold text-gray-900 dark:text-gray-100 sm:text-5xl md:text-6xl text-left"
          >
            <span class="block xl:inline">Proudly Serving</span>{' '}
            <span class="block text-sky-400 dark:text-sky-300 xl:inline"
              >The Overland Park, KS area
            </span>
          </h1>
          <p
            class="mt-3 text-base text-gray-600 dark:text-gray-300 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0"
          >
            Sommer Lawn & Landscape is dedicated to quality and reliable service and communication.
          </p>
          <p
            class="mt-3 text-base text-gray-600 dark:text-gray-300 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0"
          >
            
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a
                href="/about"
                class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-sky-600 hover:bg-sky-600 dark:text-black dark:bg-sky-300 dark:hover:bg-sky-300 md:py-4 md:text-lg md:px-10"
              >
                About
              </a>
            </div>
            <div class="mt-3 sm:mt-0 sm:ml-3">
              <a
                href="Tel: (913) 999-4115"
                class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-sky-800 bg-sky-100 hover:bg-sky-200 dark:text-sky-100 dark:bg-sky-900 dark:hover:bg-sky-900 md:py-4 md:text-lg md:px-10"
                rel="noopener noreferrer"
                target="_blank"
              >
                Call or Text Us (913) 999-4115
              </a>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <div
    class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 bg-sky-100 dark:bg-sky-500"
  >
    <HeroImg
      class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full"
      src="../images/Lawn.png"
      alt="featured"
    />
  </div>
</div>
