---
import type { Frontmatter } from '../config'
import { SiteMetadata } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'

const frontmatter: Frontmatter = {
  title: '404: Not found',
  description: "You just hit a route that doesn't exist... the sadness.",
  coverSVG: '../svg/undraw/undraw_page_not_found.svg',
  socialImage: '../images/undraw/undraw_page_not_found.png',
  publishDate: SiteMetadata.buildTime,
}
---
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-FLZ7TYS7JP"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-FLZ7TYS7JP');
</script>

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title}
      description={frontmatter.description}
      coverSVG={frontmatter.coverSVG}
      socialImage={frontmatter.socialImage}
    />
  </header>
</Base>
